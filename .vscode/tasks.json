{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "FastApi: runserver",
            "type": "shell",
            "command": "uvicorn",
            "args": [
                "main:app",
                "--reload",
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend/",
                "env": {
                    "PYTHONIOENCODING": "UTF-8",
                    "LANG": "C.UTF-8",
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Flask: shell",
            "type": "shell",
            "command": "flask",
            "args": [
                "shell"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONIOENCODING": "UTF-8",
                    "LANG": "C.UTF-8",
                    "FLASK_APP": "backend"
                }
            }
        },
        {
            "label": "Alembic: db init",
            "type": "shell",
            "command": "alembic",
            "args": [
                "init",
                "migrations"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONIOENCODING": "UTF-8",
                    "LANG": "C.UTF-8",
                }
            }
        },
        {
            "label": "Alembic: db makemigrations",
            "type": "shell",
            "command": "alembic",
            "args": [
                "revision",
                "--autogenerate"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend/",
                "env": {
                    "PYTHONIOENCODING": "UTF-8",
                    "LANG": "C.UTF-8",
                }
            }
        },
        {
            "label": "Alembic: db migrate",
            "type": "shell",
            "command": "alembic",
            "args": [
                "upgrade",
                "head"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend/",
                "env": {
                    "PYTHONIOENCODING": "UTF-8",
                    "LANG": "C.UTF-8",
                }
            },
        },
        {
            "label": "Alembic: db upgrade",
            "type": "shell",
            "command": "alembic",
            "args": [
                "upgrade",
                "head"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend/",
                "env": {
                    "PYTHONIOENCODING": "UTF-8",
                    "LANG": "C.UTF-8",
                }
            },
            "dependsOn": [
                "Alembic: db makemigrations"
            ]
        },
    ]
}